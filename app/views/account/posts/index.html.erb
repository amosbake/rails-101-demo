<div class="col-md-12">
  <h2 class="text-center">我的讨论版</h2>
  <table class="table">
      <thead>
          <tr>
              <th>Content</th>
              <th>Group Name</th>
              <th>Last Update</th>
              <th colspan="2"></th>
          </tr>
      </thead>
      
      <tbody>
          <% @posts.each do |post| %>
            <tr>
              <th><%= render_post_content(post)%></th>
              <th><%= post.group.title%></th>
              <th><%= post.updated_at.to_s(:long)%></th>
              <th><%= link_to("Edit",edit_group_post_path(post.group,post),class:"btn btn-info btn-xs")%></th>
              <th><%= link_to("Delete",group_post_path(post.group,post),method: :delete,data:{confirm: "Are you sure?"},class:"btn btn-danger btn-xs")%></th>
            </tr>
          <% end %>
      </tbody>
  </table>
</div>